<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="1.0">
	<persistence-unit name="jruteros">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<class>clasesJruteros.Actividad</class>
		<class>clasesJruteros.Admin</class>
		<class>clasesJruteros.Imagen</class>
		<class>clasesJruteros.Punto</class>
		<class>clasesJruteros.Ruta</class>
		<class>clasesJruteros.RutaRealizada</class>
		<class>clasesJruteros.Usuario</class>
		<properties>
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.connection.driver_class" value="com.mysql.jdbc.Driver"/>
			<property name="hibernate.connection.username" value="root" />
			<property name="hibernate.connection.password" value="federico"/>
			<property name="hibernate.connection.url" value="jdbc:mysql://localhost:3306/jruteros"/>
			<property name="hibernate.default_schema" value="jruteros" />
			<property name="hibernate.dialect" value="org.hibernate.dialect.MySQL5InnoDBDialect"/>
		</properties>
	</persistence-unit>
</persistence>